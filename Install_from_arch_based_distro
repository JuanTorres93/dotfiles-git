# Install paru
sudo pacman -S --needed base-devel
cd ~
git clone https://aur.archlinux.org/paru.git
cd paru
makepkg -si

# Delete paru source code
cd ..
rm -rf paru

# Install paru packages
paru -S nerd-fonts-terminus nerd-fonts-mononoki xmonad-log polybar zsa-wally-bin
