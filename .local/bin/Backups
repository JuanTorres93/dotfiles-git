#!/bin/bash

selection=$(printf "Create\nRestore" | dmenu -i -p "Create or restore image?")

backupDir="/home/juan/hdd/rsync/"
systemDir="/"
exclusionsFile="/home/juan/.local/bin/backups-exclude-directories"

case "$selection" in
	"Create")
		sudo rsync -aAX --progress --delete --dry-run --exclude-from "$exclusionsFile" "$systemDir" "$backupDir"
		;;

	"Restore")
		# Restore
		sudo rsync -aAX --progress --delete --dry-run --exclude-from "$exclusionsFile" "$backupDir" "$systemDir"
		;;
	*)
		;;



esac
